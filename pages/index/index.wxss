/* index.wxss */
.container {
  
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 1338rpx;
  
}

.header {
  margin-bottom: 20px;
}

.footer {
  text-align: center;
  flex-shrink: 0; 
}

button {
  padding: 10px 20px;
  background-color: #014FA8;
  color:white;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}

.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.popup-image {
  width: 80%;
  height: 80%;
  margin-bottom: 20px;
}

.popup-footer {
  display: flex;
  justify-content: space-between;
  padding: 20px;
}
.bottom-button1 {
  background-color:#014FA8;
  color:white;
  border: none;
  border-radius: 8px;
  padding: 10px;
  text-align: center;
}

