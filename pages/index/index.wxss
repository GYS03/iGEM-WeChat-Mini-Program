/* index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.header {
  margin-bottom: 20px;
}

.footer {
  text-align: center;
}

button {
  padding: 10px 20px;
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}

.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.popup-image {
  width: 80%;
  height: 80%;
  margin-bottom: 20px;
}

.popup-footer {
  display: flex;
  justify-content: space-around;
}

.popup-footer button {
  background-color: #fff;
  color: #007aff;
}
